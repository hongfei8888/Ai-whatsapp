model BatchOperation {
  id            String    @id @default(cuid())
  accountId     String    // ğŸ†• æ‰€å±è´¦å·
  type          String    // 'import', 'send', 'tag', 'delete', 'archive'
  status        String    @default("pending") // 'pending', 'processing', 'completed', 'failed', 'cancelled'
  title         String
