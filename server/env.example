# Database
DATABASE_URL=file:./dev.db

# Server
PORT=4000
NODE_ENV=development

# WebSocket Configuration
WS_ENABLED=true
WS_PORT=4000

# WhatsApp Session
SESSION_PATH=./.session

# Authentication
# AUTH_TOKEN=changeme

# AI Configuration
DEEPSEEK_API_KEY=sk-xxxx
DEEPSEEK_MODEL=deepseek-chat

# Cooldown Settings
COOLDOWN_HOURS=24
PER_CONTACT_REPLY_COOLDOWN=10

# 百度翻译 API 配置
